        type            fixedValue;
        value           uniform 0;
    }
    lowerWall
    {
        type            fixedValue;
        value           uniform 0;
    }
    upperWall
    {
        type            fixedValue;
        value           uniform 0;
    }
    veloMain
    {
        type            fixedValue;
        value           uniform 0;
    }
    veloTop
    {
        type            fixedValue;
        value           uniform 0;
    }
    veloWheelcase
    {
        type            fixedValue;
        value           uniform 0;
    }
}


